{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "./build.sh",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/scripts"
            },
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./run.sh",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/scripts"
            },
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "./clean.sh",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/scripts"
            },
        },
        {
            "label": "debug",
            "type": "shell",
            "command": "./debug.sh",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/scripts"
            },
        },
        {
            "label": "clean_build_run",
            "type": "shell",
            "command": "./clean.sh && ./build.sh && ./run.sh",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/scripts"
            },
        },
        {
            "label": "clean_build",
            "type": "shell",
            "command": "./clean.sh && ./build.sh",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/scripts"
            },
        },
        {
            "label": "build_run",
            "type": "shell",
            "command": "./build.sh && ./run.sh",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/scripts"
            },
        },
    ]
}